#ifndef _NBL_GLSL_EXT_BLUR_GET_PADDED_DATA_DEFINED_

vec4 nbl_glsl_ext_Blur_getPaddedData(in uvec2 coordinate)
{
	const uvec2 image_dims = uvec2(nbl_glsl_ext_Blur_Parameters_t_getWidth(), nbl_glsl_ext_Blur_Parameters_t_getHeight());

	vec4 data = vec4(0.f);
	if (all(lessThan(coordinate, image_dims)))
		data = nbl_glsl_ext_Blur_Storage_t_set(in_values[coordinate.y * image_dims.x + coordinate.x]);

	return data;
}

#define _NBL_GLSL_EXT_BLUR_GET_PADDED_DATA_DEFINED_
#endif

#ifndef _NBL_GLSL_EXT_BLUR_SET_DATA_DEFINED_

void nbl_glsl_ext_Blur_setData(in uvec2 coordinate, in vec4 val)
{
	const uvec2 image_dims = uvec2(nbl_glsl_ext_Blur_Parameters_t_getWidth(), nbl_glsl_ext_Blur_Parameters_t_getHeight());

	if (all(lessThan(coordinate, image_dims)))
		out_values[coordinate.y * image_dims.x + coordinate.x] = nbl_glsl_ext_Blur_Storage_t_get(val);
}

