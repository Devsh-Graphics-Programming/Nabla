#include "nbl/builtin/glsl/ext/CentralLimitBoxBlur/parameters.glsl"

uvec2 nbl_glsl_ext_Blur_getCoordinates(in uint tidx)
{
    const uint direction = nbl_glsl_ext_Blur_Parameters_t_getDirection();
    uvec2 tmp = uvec2(gl_WorkGroupID.x);
    tmp[direction] = (tidx * _NBL_GLSL_WORKGROUP_SIZE_) + gl_LocalInvocationIndex;
    return tmp;
}

